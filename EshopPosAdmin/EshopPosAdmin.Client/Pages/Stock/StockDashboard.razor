@page "/StockDashboard"
<PageTitle>StockDashboard</PageTitle>

<MudContainer MaxWidth="MaxWidth.ExtraExtraLarge">
    <MudGrid Spacing="2">
        <MudItem xs="12" sm="4" md="4" lg="4" xl="4" xxl="4" Style="height:30dvh">
            <MudStack Row = "true" Justify="Justify.SpaceBetween" Spacing="1" >
                <MudStack>
                    <MudText>Congratulations Element X </MudText>
                    <MudText>Best Seller of the month </MudText>
                    <MudText Class="mt-4">Kes 48K </MudText>
                    <MudText>78% of target </MudText>
                    <MudButton Variant="Variant.Filled" Color="Color.Primary" Class="mt-4">View Sales </MudButton>
                </MudStack>
                <MudStack Justify="Justify.Center">
                    <MudIcon Style="font-size:60%" Icon="fa-solid fa-medal"></MudIcon>
                 
                </MudStack>
            </MudStack>

        </MudItem>
        <MudItem xs="12" sm="8" md="8" lg="8" xl="8" xxl="8" Style="height:30dvh">
          
                    <MudSplitter @ref="_splitter"
                                 @bind-Dimension="@_percentage"
                              
                                 EnableMargin="true" 
                                  Color="Color.Primary" Bordered="false">
                        <StartContent>
                            <MudStack Row="true" Justify="Justify.SpaceBetween">
                                <MudText>New Visitors</MudText>
                                <MudText>Last week</MudText>
                            </MudStack>
                    <MudStack>23%</MudStack>
                    <MudStack Row="true">
                        <MudIcon Size="Size.Large" Icon="@Icons.Material.Filled.TrendingDown"></MudIcon>
                    </MudStack>
                        </StartContent>

                        <EndContent>
                        
                        
                        
                        
                        
                        
                        </EndContent>
                    </MudSplitter>
                   
            
        </MudItem>
     
    </MudGrid>
</MudContainer>

@code {
    MudSplitter _splitter;
    double _percentage = 50;
}
